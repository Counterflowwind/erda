{
  "name": "应用实例OOM",
  "alert_scope": "micro_service",
  "attributes": {
    "level": "Fatal",
    "recover": "true",
    "display_url_id": "workbench_runtime",
    "alert_group": "{{terminus_key}}-{{container_id}}",
    "tickets_metric_key": "{{container_id}}"
  },
  "template": {
    "metric": "docker_container_summary",
    "window": 1,
    "filters": [
      {
        "tag": "org_name",
        "operator": "eq",
        "value": "$org_name"
      },
      {
        "tag": "terminus_key",
        "operator": "eq",
        "value": "$terminus_key"
      }
    ],
    "group": [
      "container_id"
    ],
    "functions": [
      {
        "aggregator": "values",
        "field": "oomkilled",
        "operator": "contains",
        "value": true
      }
    ],
    "select": {
      "cluster_name": "#cluster_name",
      "host_ip": "#host_ip",
      "container_id": "#container_id",
      "service_name": "#service_name",
      "project_name": "#project_name",
      "application_name": "#application_name",
      "runtime_name": "#runtime_name",
      "application_id": "#application_id",
      "project_id": "#project_id",
      "runtime_id": "#runtime_id",
      "terminus_key": "#terminus_key",
      "instance_id": "#instance_id",
      "pod_ip": "#pod_ip",
      "org_name": "#org_name"
    },
    "outputs": [
      "alert"
    ]
  }
}
