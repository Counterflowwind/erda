{
  "name": "服务熔断通知告警",
  "alert_scope": "micro_service",
  "attributes": {
    "level": "Warning",
    "recover": "true",
    "alert_group": "{{terminus_key}}",
    "tickets_metric_key": "{{terminus_key}}"
  },
  "template": {
    "metric": "sidecar_circuit_breaker",
    "window": 1,
    "filters": [
      {
        "tag": "terminus_key",
        "operator": "eq",
        "value": "$terminus_key"
      },
      {
        "tag": "org_name",
        "operator": "eq",
        "value": "$org_name"
      }
    ],
    "group": [
      "service_name"
    ],
    "functions": [
      {
        "aggregator": "sum",
        "field": "count",
        "operator": "gte",
        "value": 1
      }
    ],
    "select": {
      "application_id": "#application_id",
      "application_name": "#application_name",
      "cluster_name": "#cluster_name",
      "host_ip": "#host_ip",
      "project_name": "#project_name",
      "runtime_name": "#runtime_name",
      "service_name": "#service_name",
      "terminus_key": "#terminus_key",
      "workspace": "#workspace",
      "org_name": "#org_name"
    },
    "outputs": [
      "alert"
    ]
  }
}
